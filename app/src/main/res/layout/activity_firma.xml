        <com.kyanogen.signatureview.SignatureView
            xmlns:sign="http://schemas.android.com/apk/res-auto"
            android:id="@+id/signature_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_component_6"
            android:layout_marginEnd="@dimen/margin_component_6"
            android:layout_marginStart="@dimen/margin_component_6"
            android:layout_marginBottom="124dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            sign:penSize="5dp"
            sign:backgroundColor="#A3A0A0"
            sign:penColor="#000000"
            sign:enableSignature="true" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAceptarFirma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_aceptar_firma"
            android:fontFamily="@font/avenir_next_lt_pro_regular"
            android:layout_marginBottom="@dimen/margin_component_2"
            android:layout_alignEnd="@+id/signature_view"
            android:layout_alignParentBottom="true"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReiniciarFirma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_reiniciar_firma"
            android:fontFamily="@font/avenir_next_lt_pro_regular"
            android:layout_marginBottom="@dimen/margin_component_2"
            android:layout_toStartOf="@+id/btnAceptarFirma"
            android:layout_marginEnd="@dimen/margin_component_3"
            android:layout_alignParentBottom="true"/>
